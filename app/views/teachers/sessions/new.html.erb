<h1 class="govuk-heading-xl">Apply for qualified teacher status (QTS) in England</h1>

<h2 class="govuk-heading-l">Sign in</h2>

<%= form_with model: @new_session_form, url: session_path(resource_name) do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.hidden_field :create_or_sign_in %>
  <%= f.govuk_email_field :email, autofocus: true, autocomplete: "email", label: { size: "m" } %>

  <%= f.govuk_submit %>
<% end %>
