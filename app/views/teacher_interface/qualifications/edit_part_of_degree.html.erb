<% content_for :page_title, title_with_error_prefix(t("application_form.tasks.sections.qualifications"), error: @form.errors.any?) %>
<% content_for :back_link_url, back_history_path(default: teacher_interface_application_form_qualifications_path) %>

<span class="govuk-caption-l"><%= I18n.t("application_form.tasks.sections.qualifications") %></span>

<%= form_with model: @form, url: [:part_of_degree, :teacher_interface, :application_form, :qualifications] do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_collection_radio_buttons :teaching_qualification_part_of_degree, %i[true false], :itself, legend: { size: "l", tag: "h1" } %>

  <%= render "shared/save_submit_buttons", f: %>
<% end %>
