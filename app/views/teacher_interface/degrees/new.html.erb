<% content_for :page_title, "#{'Error: ' if @degree_form.errors.any?}" %>
<% content_for :back_link_url, back_link_url %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @degree_form, url: teacher_interface_degrees_url, method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_collection_radio_buttons(
          :degree,
          [OpenStruct.new(label: 'Yes', value: true), OpenStruct.new(label: 'No', value: false)],
          :value,
          :label,
          legend: { size: 'l', text: 'Change this question?' },
          hint: { text: 'Change this hint' }
        ) %>
      <%= f.govuk_submit prevent_double_click: false %>
    <% end %>
  </div>
</div>
