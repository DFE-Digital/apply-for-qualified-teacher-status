<% content_for :page_title, "#{"Error: " if @form.errors.any?}#{t(".legend")}" %>
<% content_for :back_link_url, assessor_interface_application_form_path(@application_form) %>

<%= form_with model: @form, url: [:confirm, :assessor_interface, @application_form, @assessment, :assessment_recommendation_decline] do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset :confirmation,
                                     inline: true,
                                     legend: { text: t(".legend"), size: "l", tag: "h1" },
                                     hint: { text: t(".hint") } do %>
    <%= f.govuk_radio_button :confirmation, :true, link_errors: true %>
    <%= f.govuk_radio_button :confirmation, :false %>
  <% end %>

  <%= f.govuk_submit prevent_double_click: false %>
<% end %>
