<% content_for :page_title, t(".heading") %>
<% content_for :back_link_url, edit_assessor_interface_application_form_assessment_assessment_recommendation_award_path(@application_form, @assessment) %>

<h1 class="govuk-heading-xl"><%= t(".heading") %></h1>

<p class="govuk-body">Before you award QTS, review the applicantâ€™s age range and subjects information below.</p>

<div class="govuk-summary-card">
  <div class="govuk-summary-card__title-wrapper">
    <h2 class="govuk-summary-card__title">Initial assessment review</h2>
  </div>

  <div class="govuk-summary-card__content">
    <%= govuk_summary_list do |summary_list|
      summary_list.with_row do |row|
        row.with_key { "Minimum age" }
        row.with_value { @assessment.age_range_min.to_s }
        row.with_action(
          text: "Change",
          href: age_range_subjects_edit_assessor_interface_application_form_assessment_assessment_recommendation_award_path(@application_form, @assessment),
          visually_hidden_text: "minimum age"
        )
      end

      summary_list.with_row do |row|
        row.with_key { "Maximum age" }
        row.with_value { @assessment.age_range_max.to_s }
        row.with_action(
          text: "Change",
          href: age_range_subjects_edit_assessor_interface_application_form_assessment_assessment_recommendation_award_path(@application_form, @assessment),
          visually_hidden_text: "maximum age"
        )
      end

      @assessment.subjects.each do |subject|
        summary_list.with_row do |row|
          row.with_key { "Subject" }
          row.with_value { t("subjects.#{subject}") }
          row.with_action(
            text: "Change",
            href: age_range_subjects_edit_assessor_interface_application_form_assessment_assessment_recommendation_award_path(@application_form, @assessment),
            visually_hidden_text: "subject"
          )
        end
      end
    end %>
  </div>
</div>

<div class="govuk-button-group">
  <%= govuk_button_link_to "Continue", [:preview, :assessor_interface, @application_form, @assessment, :assessment_recommendation_award] %>
  <%= govuk_link_to t(".cancel"), assessor_interface_application_form_path(@application_form) %>
</div>
