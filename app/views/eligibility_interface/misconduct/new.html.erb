<% content_for :page_title, "#{'Error: ' if @misconduct_form.errors.any?}Is your employment record as a teacher free of sanctions?" %>
<% content_for :back_link_url, back_link_url(eligibility_interface_teach_children_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @misconduct_form, url: eligibility_interface_misconduct_path, method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_collection_radio_buttons(:free_of_sanctions,
            [OpenStruct.new(label: 'Yes', value: true), OpenStruct.new(label: 'No', value: false)],
            :value,
            :label,
            legend: { size: 'l', text: 'Is your employment record as a teacher free of sanctions?' },
            hint: { text: 'You must not have any findings of misconduct or restrictions on your practice.' }
          ) %>
      <%= f.govuk_submit prevent_double_click: false %>
    <% end %>
  </div>
</div>
