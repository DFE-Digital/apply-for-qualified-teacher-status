<% content_for :page_title, "#{'Error: ' if @misconduct_form.errors.any?}Do you have any sanctions or restrictions on your employment record?" %>
<% content_for :back_link_url, back_link_url(eligibility_interface_work_experience_path) %>

<%= form_with model: @form, url: [:eligibility_interface, :misconduct] do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_collection_radio_buttons(
    :misconduct,
    [OpenStruct.new(label: 'Yes', value: true), OpenStruct.new(label: 'No', value: false)],
    :value,
    :label,
    legend: { size: 'l', tag: 'h1', text: 'Do you have any sanctions or restrictions on your employment record?' },
    hint: { text: 'To teach in England, your teaching record must have no sanctions, restrictions, penalties or instances of misconduct.' }
  ) %>

  <%= f.govuk_submit %>
<% end %>
