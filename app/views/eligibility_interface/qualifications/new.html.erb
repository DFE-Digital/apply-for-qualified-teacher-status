<% content_for :page_title, "#{'Error: ' if @qualification_form.errors.any?}Do you have a teaching qualification?" %>
<% content_for :back_link_url, back_link_url(eligibility_interface_countries_path) %>

<%= form_with model: @qualification_form, url: eligibility_interface_qualifications_url, method: :post do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_collection_radio_buttons(
    :qualification,
    [OpenStruct.new(label: 'Yes', value: true), OpenStruct.new(label: 'No', value: false)],
    :value,
    :label,
    legend: { size: 'l', tag: 'h1', text: 'Do you have a teaching qualification?' },
    hint: { text: "To teach in England, you need to be able to show that you have a teaching qualification." }
  ) %>
  <%= f.govuk_submit prevent_double_click: false %>
<% end %>
